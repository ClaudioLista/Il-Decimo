<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/match.css">
    
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="centered">
        <h1><%= m.title %></h1>
        <hr>
        <div class="image">
            <img src="/img/field.png" alt="<%= m.title %>">
        </div>
        <% if (!playerIn && !is_full){ %>
            <form action="/matches/:matchId/join" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" value="<%= m._id %>" name="matchId">
                <button class="btn" type="submit">Confirm!</button>
            </form>
        <% } else {%>
            <h1 class="text-purple">You're already in!</h1>
            <br><br>
            <a class="btn" href="/matches">Torna alla lista dei match!</a>
        <% } %>
    </main>
    
<%- include('../includes/end.ejs') %>