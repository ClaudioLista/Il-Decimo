<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/match.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
    <main>
        <h1 style="text-align: center;">CREATE A NEW MATCH!</h1>
        <form class="match-form" action="/add-match" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title">
            </div>
            <div class="form-control">
                <label for="title">Place</label>
                <input type="text" name="placeName" id="placeName">
            </div>
            <div class="form-control">
                <label for="title">Address</label>
                <input type="text" name="address" id="address">
            </div>
            <div class="form-control">
                <label for="title">When?</label>
                <input type="datetime-local" name="time" id="time">
            </div>
            <div class="form-control">
                <label for="title">N. of players</label>
                <input type="text" name="totalPlayers" id="totalPlayers">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"></textarea>
            </div>

            <button class="btn" type="submit">Create match!</button>
        </form>
    </main>
    
<%- include('../includes/end.ejs') %>