<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/match.css">
    <link rel="stylesheet" href="/css/add-match.css">
</head>



<body>
   <%- include('../includes/navigation.ejs') %>
    <main>
    
        
        <div class="container">
            <!-- code here -->
            <div class="card">
                <div class="card-image">	
                    <h2 class="card-heading">
                        Crea un match
                        <small>Crea il tuo mattch</small>
                    </h2>
                </div>
                <form class="card-form" action="/add-match" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                    <div class="input">
                        <input type="text" class="input-field"  name="title" id="title" required/>
                        <label class="input-label">Titolo della partita</label>
                    </div>
                    <div class="input">
                        <input type="text" class="input-field" name="placeName" id="placeName" required />
                        <label class="input-label">Luogo</label>
                    </div>

                    <div class="input">
                        <input type="text" class="input-field" name="address" id="address" required />
                        <label class="input-label">Indirizzo</label>
                    </div>
                    <div class="input">
                        <input type="datetime-local" class="input-field" name="time" id="time" required/>
                        <label class="input-label">Quando?</label>
                    </div>

                    <div class="input">
                        <input type="text" class="input-field" name="totalPlayers" id="totalPlayers" required />
                        <label class="input-label">Numero di giocatori</label>
                    </div>
                    <div class="input">
                        
                        <input type="number" class="input-field" name="price" id="price" step="0.50" required>
                        <label class="input-label">Prezzo</label>
                    </div>
                    
                    <div class="input">
                        
                        <!-- <textarea class="input-field" name="description" id="description" rows="5"></textarea> -->
                        <input type="text" class="input-field" name="description" id="description"  />
                        <label class="input-label">Descrizione</label>
                    </div>
                    
                    
                    
                    <div class="action">
                        <button class="action-button" type="submit" >Crea il match</button>
                    </div>
                </form>
                
            </div>
        </div>
        
        <script>today = new Date().toISOString().split(":")[0]+":00";
            document.getElementById("time").setAttribute("min","2023-01-07T00:00")
        </script>
    </main>
    
<%- include('../includes/end.ejs') %>