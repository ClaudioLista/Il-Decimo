<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/match.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="match-form" action="/<% if (editing) { %>edit-match<% } else { %>add-match<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= match.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="title">Place</label>
                <input type="text" name="placeName" id="placeName" value="<% if (editing) { %><%= match.placeName %><% } %>">
            </div>
            <div class="form-control">
                <label for="title">Address</label>
                <input type="text" name="address" id="address" value="<% if (editing) { %><%= match.address %><% } %>">
            </div>
            <div class="form-control">
                <label for="title">When?</label>
                <input type="datetime-local" name="time" id="time" value="<% if (editing) { %><%= match.time %><% } %>">
            </div>
            <div class="form-control">
                <label for="title">N. of players</label>
                <input type="text" name="totalPlayers" id="totalPlayers"value="<% if (editing) { %><%= match.totalPlayers %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if (editing) { %><%= match.price %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing) { %><%= match.description %><% } %></textarea>
          
            <% if (editing) { %>
                <input type="hidden" value="<%= match._id %>" name="matchId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Match<% } else { %>Add Match<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>