<script src="/js/logoutButton.js"></script>

<header class="main-header">
    <button id="side-menu-toggle">Men√π</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/' ? 'active' : '' %>" href="/">Home</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/matches' ? 'active' : '' %>" href="/matches">Visualizza partite</a>
            </li>
            <% if (isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/add-match' ? 'active' : '' %>" href="/add-match">Crea una nuova partita</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/mymatches' ? 'active' : '' %>" href="/mymatches">Le mie partite</a>
                </li>
                <% if (isAdministrator) { %>
                    <li class="main-header__item">
                        <a class="<%= path === '/listMatch' ? 'active' : '' %>" href="/listMatch">Tutte le partite</a>
                    </li>
                    <li class="main-header__item">
                        <a class="<%= path === '/listUser' ? 'active' : '' %>" href="/listUser">All Users</a>
                    </li>
                <% } %>
            <% } %>
            
        </ul>
        <ul class="main-header__item-list">
            <% if (!isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Registrati</a>
                </li>
            <% } else { %>
                <li class="main-header__item">
                    <a class="<%= path === '/profile' ? 'active' : '' %>" href="/myprofile">Il mio profilo</a>
                </li>
                <li class="main-header__item">
                    <button id="logoutButton">Logout</button>
                </li>
            <% } %>
        </ul>
    </nav>
    <div>
        <form action="/logout" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button id="confirmLogout" class="btnLogout" type="submit">Conferma Logout</button>
        </form>
    </div>
</header>

